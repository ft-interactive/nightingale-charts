{
  "version": "0.0.3",
  "name": "o-charts",
  "description": "FT style charts, axes, scales etc",
  "private": true,
  "main": "src/scripts/o-charts.js",
  "scripts": {
    "start": "npm run build && srvlr _site -R -l tiny",
    "test": "npm run build && jshint src && karma start test/karma.functional.js --single-run && karma start test/karma.unit.js --single-run",
    "scripts": "mkdir -p _site/scripts && browserify -r ./bower_components/d3/d3.js:d3  -r ./src/scripts/o-charts.js:o-charts > _site/scripts/o-charts.js",
    "styles": "mkdir -p _site/styles && node-sass --style expanded src/styles/main.scss _site/styles/main.css && node-sass --style expanded demo/styles/demo.scss _site/styles/demo.css",
    "build": "npm run scripts && npm run styles &&  npm run build-html",
    "build-html": "mkdir -p _site && cp demo/*.html _site",
    "watch": "watchify -e src/scripts/o-charts.js -o _site/scripts/o-charts.js -r ./src/scripts/o-charts.js:o-charts -r d3:d3 & sass --style expanded --watch src/styles/main.scss:_site/styles/main.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ft-interactive/o-charts.git"
  },
  "author": "tom pearson",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^9.0.3",
    "browserify-istanbul": "^0.2.1",
    "browserify-shim": "^3.8.3",
    "browserify-istanbul": "^0.2.1",
    "component-helper": "git://github.com/peter-mouland/component-helper",
    "jshint": "^2.6.3",
    "karma": "^0.12.31",
    "karma-cli": "0.0.4",
    "karma-browserify": "^4.0.0",
    "karma-chrome-launcher": "^0.1.7",
    "karma-coverage": "0.2.6",
    "karma-html2js-preprocessor": "^0.1.0",
    "karma-jasmine": "^0.3.3",
    "karma-phantomjs-launcher": "^0.1.4",
    "mustache": "^1.2.0",
    "node-sass": "^2.0.1",
    "srvlr": "^0.4.0",
    "uglifyjs": "^2.4.10"
  },
  "browser": {
    "d3": "./bower_components/d3/d3.js"
  }
}
