{
  "name": "o-charts",
  "description": "bits and bobs for making FT style charts",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "browserify -e src/index.js -o modest-charts.js -r ./src/index.js:modestCharts -x d3",
    "scss": "cat style/*.css > modest-charts.scss",
    "watch": "watchify -e src/index.js -o modest-charts.js -r ./src/index.js:modestCharts -x d3",
    "vendor": "browserify -e node_modules/d3/d3.js  -o vendor.js -r d3"
  },
  "repository": {
    "type": "git",
    "url": "http://git.svc.ft.com:8080/scm/iglt/o-charts.git"
  },
  "browser": {
    "d3": "./node_modules/d3/d3.js"
  },
  "author": "tom pearson",
  "license": "ISC",
  "devDependencies": {},
  "dependencies": {
    "browserify": "^5.11.0",
    "d3": "^3.4.11"
  }
}
